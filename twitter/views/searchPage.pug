extends layouts/main-layout.pug

block content

    .searchBarContainer 
        ion-icon(name='search-outline')
        input#searchBox(type="text", name="searchBox",data-search=selectedTab,placeholder="search user or post...")
    .tabsContainer 
        +createTab("Posts", `/search/posts`, selectedTab != "users")
        +createTab("Users", `/search/users`, selectedTab == "users")

    .resultsContainer

    +createReplyModal(userLoggedIn)
    +createDeleteModal(userLoggedIn)

block scripts 
    script(src="/js/search.js")