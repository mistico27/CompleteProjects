    body 
        .wrapper
            .row
                nav.col-2 
                    a.black(href="/")
                        ion-icon(name='logo-vk')
                    a(href="/")    
                        ion-icon(name='home')
                    a(href="/search")    
                        ion-icon(name='search')
                    a(href="/notifications")    
                        ion-icon(name='egg')
                    a(href="/messages")
                        ion-icon(name='mail-unread')
                    a(href="/profile")    
                        ion-icon(name='flame')
                    a(href="/logout")    
                        ion-icon(name='checkmark')
                .mainSectionContainer.col-10.col-md-8.col-lg-6
